<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="com.example.yosoy.pagame.Activity.DetailsBillActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Nombre: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textNombre"
            android:layout_weight="0.04"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Nombre"
            android:layout_weight="0.15"
            android:layout_marginLeft="20dp"
            android:textSize="24sp"/>

        <android.support.v7.widget.RecyclerView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:id="@+id/RecyclerViewTelefono">

        </android.support.v7.widget.RecyclerView>



        <TextView
            android:text="Descripcion: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textDescripcion"
            android:layout_weight="0.04"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Descripcion"
            android:layout_weight="0.15"
            android:layout_marginLeft="20dp"
            android:textSize="24sp"/>

        <TextView
            android:text="Cuenta: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textCuenta"
            android:layout_weight="0.04"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:text="TextView"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/debesTeDeben"
            android:textAlignment="center"
            android:layout_weight="0.20" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Cuenta"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_weight="0.07" />


        <Button
            android:text="AÑADIR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/añadir"
            android:background="@color/colorPrimary"
            android:fontFamily="monospace"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_marginTop="15dp"
            android:text="LIQUIDAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/liquidar"
            android:background="@android:color/holo_red_light"
            android:fontFamily="monospace"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
